{
  "manifest_version": 3,
  "name": "TruTrace AI Detector",
  "version": "1.0",
  "description": "Detect AI-generated images and text on any webpage",
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["stamp-fake.png", "stamp-real.png"],
      "matches": ["<all_urls>"]
    }
  ]
}